{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 4,
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["each", "extend", "for", "function", "if", "include", "mixin"]
    }],
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["global"]
    }]
  }
}
