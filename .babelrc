{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    ["module-resolver", {
      "alias": {
        "components": "./src/components",
        "constants": "./src/constants",
        "fonts": "./src/fonts",
        "store": "./src/store",
        "styles": "./src/styles",
        "util": "./src/util"
      }
    }]
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "plugins": [
        "@babel/plugin-transform-react-constant-elements",
        "lodash",
        "transform-react-pure-class-to-function"
      ]
    }
  }
}
