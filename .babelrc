{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    "@babel/plugin-transform-runtime",
    [
      "module-resolver",
      {
        "alias": {
          "components": "./src/components",
          "constants": "./src/constants",
          "fonts": "./src/fonts",
          "server": "./src/server",
          "services": "./src/services",
          "store": "./src/store",
          "styles": "./src/styles",
          "util": "./src/util"
        }
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    },
    "production": {
      "plugins": ["lodash"]
    }
  }
}
